{
    "name": "MLPGender",
    "num_cross_val": 5,
    "n_gpu": 0,
    "arch": {
        "type": "MLPGender",
        "args": {
            "num_classes": 2,
            "dropout": 0.5,
            "num_layers": 5
        }
    },
    "data_loader": {
        "type": "GenderDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8,
            "eval_batch_size": 128,
            "dataset": "Adience"
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.01
        }
    },
    "loss": "cse",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 5,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 30,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}